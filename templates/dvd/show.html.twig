{% extends 'base.html.twig' %}

{% block title %}Dvd{% endblock %}

{% block body %}
    <h1>Dvd</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dvd.id }}</td>
            </tr>
            <tr>
                <th>Cote</th>
                <td>{{ dvd.cote }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ dvd.titre }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ dvd.format }}</td>
            </tr>
            <tr>
                <th>CodeOeuvre</th>
                <td>{{ dvd.codeOeuvre }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ dvd.duration ? dvd.duration|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('dvd_index') }}">back to list</a>

    <a href="{{ path('dvd_edit', {'id': dvd.id}) }}">edit</a>

    {{ include('dvd/_delete_form.html.twig') }}
{% endblock %}
